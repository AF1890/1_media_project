{% extends 'base.html.twig' %}
{#{% form_theme form 'bootstrap_3_layout.html.twig' %}
 {% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %} #}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/media/style.css') }}">
{% endblock %}

{% block materialize %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/css/materialize.min.css">

    <!-- Compiled and minified JavaScript -->
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/js/materialize.min.js"></script>
    <script>
        $(document).ready(function () {
            Materialize.updateTextFields();
            $('select').material_select();
        });
    </script>
{% endblock materialize %}

{% block body %}
    <body class="index">
    <div class="container">
        <div class="row">
            <div class="col S12">
                <h1>Albums list</h1>
            </div>
            <div class="row">
                <div class="col S12">
            <table>
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Titrealbum</th>
                    <th>Artiste</th>
                    <th>Genre</th>
                    <th>Support</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for album in albums %}
                    <tr>
                        <td><a href="{{ path('album_show', { 'id': album.id }) }}">{{ album.id }}</a></td>
                        <td>{{ album.titreAlbum }}</td>
                        <td>{{ album.artiste }}</td>
                        <td>{{ album.genre }}</td>
                        <td>{{ album.support }}</td>
                        <td>
                            <div>

                                    <a href="{{ path('album_show', { 'id': album.id }) }}">show</a>
                            </div>
                            <div>

                                    <a href="{{ path('album_edit', { 'id': album.id }) }}">edit</a>
                            </div>

                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            </div>
        </div>
    </div>
    <ul id="new">
        <a href="{{ path('album_new') }}">Create a new album</a>
    </ul>
    </div>
    </body>
{% endblock %}
