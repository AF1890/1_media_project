{% extends 'base.html.twig' %}

{% block body %}

    <div class="container center">
        <div class="card teal center">
            <h1 class="white-text">Ajouter un commentaire :</h1>
        </div>

        {{ form_start(form) }}

        <div class="row">
            <div class="col s12">
                <div class="input-field">
                    <label>Utilisateur</label>
                    {{ form_widget(form.utilisateur) }}
                    {{ form_errors(form.utilisateur) }}
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col s12 m12 l4">
                <label>Nom de l'artiste</label>
                {{ form_widget(form.commentaire) }}
                {{ form_errors(form.commentaire) }}
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <label>Genre de musique</label>
                {{ form_widget(form.album) }}
                {{ form_errors(form.album) }}
            </div>
        </div>

        <div class="row center">
            <input class="waves-effect waves-light btn" type="submit" value="create" />
            <a href="{{ path('commentaire_index') }}" class="waves-effect waves-light btn">Retour a la Liste</a>
        </div>

        {{ form_end(form) }}

    </div>

{% endblock %}
