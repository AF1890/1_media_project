{% extends 'base.html.twig' %}

{% block body %}
    <h1>
        Commentaire
        {% if commentaire.album != null %}
            sur l'album {{ commentaire.album }}
        {% endif %}
    </h1>

    {{ form_start(form) }}
        {{ form_widget(form) }}
        <input type="submit" value="Poster" />
    {{ form_end(form) }}
    <ul>
        {% if commentaire.album != null %}
            <li>
                <a href="{{ path('_show', { 'id': commentaire.album.id }) }}">Retour à l'album</a>
            </li>
        {% endif %}
        <li>
            <a href="{{ path('commentaire_index') }}">Retour à la liste des commentaires</a>
        </li>
    </ul>
{% endblock %}
