            </tbody>
        </table>

        <div>
                <a class="btn btn-primary" href="{{ path('commentaire_index') }}">Back to the list</a>

                <a class="btn btn-primary" href="{{ path('commentaire_edit', { 'id': commentaire.id }) }}">Edit</a>

                {{ form_start(delete_form) }}
