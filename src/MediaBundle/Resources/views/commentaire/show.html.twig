{% extends 'base.html.twig' %}

{% block body %}
    <h1>Commentaire</h1>

    <table>
        <tbody>
            <tr>
                <th>Album</th>
                <td>{{ commentaire.album }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ commentaire.id }}</td>
            </tr>
            <tr>
                <th>Utilisateur</th>
                <td>{{ commentaire.utilisateur }}</td>
            </tr>
            <tr>
                <th>Commentaire</th>
                <td>{{ commentaire.commentaire }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('_show', { 'id': commentaire.album.id }) }}">Retour à l'album</a>
        </li>
        <li>
            <a href="{{ path('commentaire_index') }}">Retour à la liste des commentaires</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Supprimer">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
