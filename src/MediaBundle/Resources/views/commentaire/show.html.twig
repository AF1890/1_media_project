{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
    <h1>Commentaire</h1>

        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ commentaire.id }}</td>
                </tr>
                <tr>
                    <th>Utilisateur</th>
                    <td>{{ commentaire.utilisateur }}</td>
                </tr>
                <tr>
                    <th>Commentaire</th>
                    <td>{{ commentaire.commentaire }}</td>
                </tr>
                <tr>
                    <th>Album</th>
                    <td>{{ commentaire.album.titreAlbum }}</td>
